<%= render :partial => 'admin/sub_menu_for_root' %>
<%= render_flash %>
<div class="option_wrap">
<% @title =  t :settings, :scope => [:txt, :view, :admin, :index_settings] -%>
<div class="edit_field">
<div class="right_c"></div>
<div class="edit_header"><div id="notifier"></div><%= t :settings, :scope => [:txt, :view, :admin, :index_settings] %> </div>
<% form_for :site, :url => {:action => "change_settings"} do |f| %>
    <label><%= t :post_number, :scope => [:txt, :view, :admin, :index_settings] %> <%= f.text_field :new_post_number, :size => 6 %></label>
    <label><%= t :brief_cut, :scope => [:txt, :view, :admin, :index_settings] %> <%= f.text_field :post_brief_cut, :size => 6 %></label>
    <%= submit_tag t(:save, :scope => [:txt, :view, :admin, :settings]), :class =>'submit' %>
<% end %>
</div>
<div class="edit_field">
<div class="right_c"></div>
<div class="edit_header"><div id="notifier"></div><%= t(:theme_settings, :scope => [:txt, :view, :admin, :themes]) %> </div>
<% form_for :site, :url => {:action => "change_settings"} do |f| %>
    <%= f.select :index_theme, @index_theme_list %>
    <%= submit_tag t(:save, :scope => [:txt, :view, :admin, :settings]), :class =>'submit' %>
<% end %>
</div>
<div class="edit_field">
<div class="right_c"></div>
<div class="edit_header"><div id="notifier"></div><%= t(:sidebar_layout_title, :scope => [:txt, :view, :admin, :sidebar]) %> - <%= t(:theme, :scope => [:txt, :view, :admin, :sidebar]) %> [ <%= @site.index_theme %> ] </div>
<% form_for :site, :url => {:action => 'sidebar_postion'} do |f| %>
  <%= bars_layout(@site.index_theme) %>
  <br style="clear:both"/>
  <% @disable_bars ||= @all_bars.reject {|b| b.show? and @fields.include?(b.field.to_s)} -%>
  <div id="disable_bar_box">
	<div class="disable_bars_title"><%= t(:available_sidebars, :scope => [:txt, :view, :admin, :sidebar]) %></div>
	<ul id="disable" class="disable_hbars">
	  <% for bar in @disable_bars -%>
	     <%= show_bar(bar, :site) %>
	  <% end -%>
	</ul>
	<br style="clear:both"/>
  </div>
  <% @fields << 'disable' -%>
  <% @overlap[:disable] = :horizontal -%>

  <% for field in @fields -%>
    <%= hidden_field_tag 'fields[]', field %>
  <% end -%>
    <input class="submit" type="button" value="<%= t(:save, :scope => [:txt, :view, :admin, :sidebar]) %>" onclick='this.form.action += "?" + bars_config(this.form, <%= @fields.inspect %>);this.form.submit();return false;'
	style=""/>
<% end %>
</div>

<% for field in @fields -%>
    <%= sortable_element field,:url => '' , :constraint => false, :containment => @fields, :dropOnEmpty => true, :overlap => @overlap[field.to_sym], :format => "/^bar_(.*)$/"%>
<% end -%>
</div>

