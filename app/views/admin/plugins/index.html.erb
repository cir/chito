<% @title = t(:message_0, :scope => [:txt, :view, :admin, :plugins]) + " - #{@p.name if @p}" -%>
<div id="sub_menu">
    <ul>
	    <% for p in @plugins -%>
		<li><%= link_to p.i18n_name, { :plugin_id => p.id}, :class => ('selected' if @p && @p.id == p.id)%></li>
	    <% end -%>
    </ul>
</div>
<%= select_admin_menu("plugin") %>
<div class="option_wrap">
<%= render_flash %>
    <% if @p -%>
	<%= plugin_render @p.id, :config %>
    <% end -%>
</div>

