<% @title = t(:comment_settings, :scope => [:txt, :view, :admin, :comments]) -%>
<%= render :partial => "admin/sub_menu_for_feedbacks" %>
<%= render_flash %>
<div class="option_wrap">
<div class="edit_field">
<div class="right_c"></div>
<div class="edit_header"><div id="notifier"></div><%= t(:filter_chain, :scope => [:txt, :view, :admin, :comments]) %></div>
<% form_for :user, :url => set_filter_position_admin_comments_path do |f| %>
   <div id="filters"> 
    <div class="comment_box"><%= t(:a_comment, :scope => [:txt, :view, :admin, :comments]) %></div><div class="point_box"></div>
    <ul id="enable_filters">
	<% for f in @enable_filters -%>
	    <%= show_filter(f) %>
	<% end -%>
    </ul>
    <div class="point_box"></div>
    <div class="comment_box"><%= t(:save, :scope => [:txt, :view, :admin, :comments]) %></div>

   </div>
   <div id="disable_filters_box">
	<div class="disable_bars_title"><%= t(:available_comment_filters, :scope => [:txt, :view, :admin, :comments]) %></div>   
    <ul id="disable_filters">
	<% for f in @disable_filters -%>
	    <%= show_filter(f) %>
	<% end -%>    
    </ul>
	<br style="clear:both"/>    
   </div>
    <input class="submit" type="button" value="<%= t(:save, :scope => [:txt, :view, :admin, :comments]) %>" onclick='this.form.action += "?" + filter_config(this.form);this.form.submit();return false;'/>   
<% end -%>
    <%= sortable_element 'disable_filters',:url => '' , :constraint => false, :containment => [:disable_filters, :enable_filters], :dropOnEmpty => true, :overlap => :horizontal, :format => "/^filter_(.*)$/" %>
    <%= sortable_element 'enable_filters',:url => '' , :constraint => false, :containment => [:disable_filters, :enable_filters], :dropOnEmpty => true, :overlap => :horizontal, :format => "/^filter_(.*)$/" %>
</div>
</div>

