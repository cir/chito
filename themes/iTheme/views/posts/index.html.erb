<% posts_cache do -%>

<% posts do -%>
        <div class="post" id="post-11">
		  <div class="date"><span><%= post_date.strftime "%b" %></span> <%= post_date.day %></div>
		  <div class="title">
          <h2><%= link_to_post %></h2>
          <div class="postdata">
	    <span class="category">
		<%= link_to_post_category(:class => 'readmore') %>
	    </span> 
	    <span class="comments">
		<%= link_to_post(:text => "#{@post.comments.size} Comments", :anchor => 'comments') %>
	    </span>
	  </div>
		  </div>
          <div class="entry">
            <%= post_brief %>
          </div><!--/entry -->
        </div><!--/post -->
<% end -%>
<div class="page-nav"><%= pagilinks %></div>
<% end -%>
