
<div class="posttotal">
<div class="datecomrap">
         <div class="date">
         <%= @post.created_at.month %><br />
         <span style="font-size:2em; font-weight:bold;"><%= @post.created_at.day %></span><br />
         <%= @post.created_at.year %>         </div><!-- end date -->


         <!-- if you don't want the comment count left of the post, erase from here ... -->
         <div class="commy">
         <%= link_to_post(:text => "#{@post.comments.count}", :anchor => 'comments', :title => "Comments") %>    
		 </div><!-- end commy -->
         <!-- to here -->


</div><!-- end datecomrap -->


<div class="storycornerwrap">
<div class="storycornerleft">
</div><!-- end storycornerleft -->
<div class="storycornercontent">
</div><!-- end storycornercontent -->
<div class="storycornerright">
</div><!-- end storycornerright -->
</div><!-- end storycornerwrap -->


     <div class="storywrap">


         <h3 class="storytitle"><%= link_to_post %></h3>

	    <div id="article_header">
		<% if_my_post do %>
			    <%= link_to t(:message_0, :scope => [:txt, :view, :posts, :show]), edit_admin_post_path(@post), :class => "edit" %>
			    <%= link_to t(:message_1, :scope => [:txt, :view, :posts, :show]), admin_posts_path, :class => "return" %>
		 <% end %>
	 </div>


        <div class="storycontent">
                <%= post_content %>
	</div><!-- end storycontent -->

        <div class="meta">

	    Category: <%= link_to_post_category %> | Tags: <%= link_to_post_tags %> | Read Count: <%= post_read_count %>

        </div><!-- end meta -->




<% if_show_trackbacks do -%>
    <div class="articlefooter">
	<span class="trackbacks_url"><%= link_to "Trackback URI", post_trackbacks_path(@post, :format => :xml) %></span>
	<span class="trackbacks">
	    <%= image_tag "trackbacks.gif", :class => 'trackbacks' %>
	    <%= t(:trackbacks, :scope => [:txt, :view, :posts, :show]) %> (<%= @trackbacks.size %>)
	</span>
    </div>
    <div id="trackbacks">
	<ul>
		<% for trackback in @trackbacks -%>
		    <li>
			<%= link_to (trackback.writer || trackback.blog_name), trackback.homepage, :title => trackback.content, :target => "_blank", :id => "trackback#{trackback.id}" %>
			- <%= trackback.created_at.to_s(:db_short) %>
		    </li>
		<% end -%>
	</ul>
    </div>
<% end -%>


<div class="articlefooter">
    <% if @trackbacks.empty? -%>
	<span class="trackbacks_url"><%= link_to "Trackback URI", post_trackbacks_path(@post, :key => @post.trackback_key, :format => :xml) %></span>
    <% end -%>
    <span class="comments">
	<%= link_to (image_tag "small_feed.png", :class => 'feed'), post_path(@post, :format => :rss) %>
	<%= t(:comments, :scope => [:txt, :view, :posts, :show]) %> (<%= @comments.size %>)
    </span>
</div>
<div id="comments">
    <%= comments %> 
</div>

<% if_can_comment do -%>
<br />
<div id="post_comment">
    <%= render :partial => 'comments/form', :locals => {:url => post_comments_path(@post)} %>
</div>
<% end %>


     </div><!-- end storywrap -->
	 


<div class="storycornerwrapbottom">
<div class="storycornerleftbottom">
</div><!-- end storycornerleftbottom -->
<div class="storycornercontentbottom">
</div><!-- end storycornercontentbottom -->
<div class="storycornerrightbottom">
</div><!-- end storycornerrightbottom -->
</div><!-- end storyornerwrap -->

</div><!-- end posttotal -->
<%= thread_comment_script_tag %>
