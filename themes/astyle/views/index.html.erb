<% posts_cache do -%>

<% posts do -%>

			<div class="post">
				<h2 class="post-titulo"><%= link_to_post %></h2>
				<p class="postmeta"><%= post_time %> Filed under <%= link_to_post_category %></p>
				<%= post_brief %>	
				<p class="read-more align-right">					
				    <%= link_to_read_more %>
				</p>
				<p class="comentarios-link"><%= link_to_post(:text => "Comments(#{@post.comments.size})", :anchor => 'comments', :class => 'comments') %></p>
				<p class="tags-link"><%= link_to_post_tags(:class => 'post_tags') %></p>
			</div>


<% end -%>

<%= pagilinks %>
<% end -%>
