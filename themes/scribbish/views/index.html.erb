<% posts_cache do -%>

<% posts do -%>
<div class="atomentry">
  <h2 class="title"><%= link_to_post %></h2>
  <div class="content">
    <%= post_brief %>
  </div>
  <div class="meta">		
    <p class="author">
    	Posted by <cite><%= @user.nick %></cite>
    	<abbr class="published" title="<%= @post.created_at %>"><%= post_time %></abbr>
    </p>
    <p class="links">
	<%= link_to_read_more %>
	Category: <%= link_to_post_category(:class => 'readmore') %>
	Tag: <%= link_to_post_tags(:class => 'post_tags') %>
	Comment: <%= link_to_post(:text => "(#{@post.comments.size})", :anchor => 'comments', :class => 'comments') %>
    </p>
    <br style="clear:both;" />
  </div>
</div>
<% end -%>
<%= pagilinks %>

<% end -%>
