<% sidebar_cache :new_comments do -%>
<ul class="navlist">
			<% for comment in @new_comments 
			    e = h(comment.writer + ":" + strip_tags(comment.content))
			-%>
			    <li><%= (link_to truncate(e,:length => @comment_cut), post_path(comment.article.id, :anchor => "comment#{comment.id}", :format => :html)) if comment.article %></li>
			<% end -%>
	
</ul>	
<% end -%>
